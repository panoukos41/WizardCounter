@using WizardCounter.Layout

@inject TranslateService translate

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(ShellLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>@("not-found.title" | translate)</PageTitle>
        <LayoutView Layout="@typeof(ShellLayout)">
            <div class="flex flex-col items-center justify-center gap-4 h-full">
                <h1 class="text-center" role="alert">@("not-found.description" | translate)</h1>
                <NotFound />
            </div>
            @{
                ShellContext.Title = "not-found.title" | translate;
            }
        </LayoutView>
    </NotFound>
</Router>
